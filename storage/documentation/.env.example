# Bruce Springsteen Ticket Hunter - Environment Variables
# Copy this file to .env and fill in your credentials

# ============================================================================
# FANSALE AUTHENTICATION (REQUIRED for automatic login)
# ============================================================================
FANSALE_EMAIL=your-email@example.com
FANSALE_PASSWORD=your-password

# ============================================================================
# PROXY CONFIGURATION (from your iProyal or other provider)
# ============================================================================
IPROYAL_HOSTNAME=geo.iproyal.com
IPROYAL_PORT=12321
IPROYAL_USERNAME=your-username
IPROYAL_PASSWORD=your-proxy-password

# ============================================================================
# OPTIONAL: Other platform credentials
# ============================================================================
# TM_USERNAME=your-ticketmaster-email
# TM_PASSWORD=your-ticketmaster-password
# VIVATICKET_USERNAME=your-vivaticket-email
# VIVATICKET_PASSWORD=your-vivaticket-password

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Set to true to enable debug logging
DEBUG_MODE=false

# Set to true to force cache bypass for testing
FORCE_FRESH_REQUESTS=false